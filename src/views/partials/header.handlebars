<header class="bg-primary text-white py-3 mb-4">
    <div class="container d-flex justify-content-between align-items-center">
        <h1 class="h3">{{title}}</h1>
        <nav>
            {{#if user}}
                <span class="mr-3">Bienvenido, {{user.email}}</span>
                <a href="/logout" class="btn btn-outline-light btn-sm">Cerrar sesión</a>

            {{#if user.image}}
            <div class="profile-picture">
                <img src="{{user.image}}" alt="Perfil del usuario">
            </div>
            {{/if}}


            {{else}}
                <a href="/login" class="btn btn-outline-light btn-sm mr-2">Iniciar sesión</a>
                <a href="/register" class="btn btn-outline-light btn-sm">Registrarse</a>
            {{/if}}
        </nav>
    </div>
</header>
